  <link name="chassis_link">
    <inertial>
      <origin
        xyz="-0.13003 0.0065063 0.052046"
        rpy="0 0 0" />
      <mass
        value="2.6" />
      <inertia
        ixx="0.0062135"
        ixy="-0.00001"
        ixz="0.00001"
        iyy="0.015216"
        iyz="-0.00001"
        izz="0.012023" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
